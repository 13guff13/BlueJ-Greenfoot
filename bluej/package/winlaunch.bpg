#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = vmselect.exe vmselect.AFK vmselect.CHS vmselect.CSY
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

vmselect.exe: winlaunch\vmselect.dpr
  $(DCC)

vmselect.AFK: winlaunch\AFK\vmselect.dpr
  $(DCC)

vmselect.CHS: winlaunch\CHS\vmselect.dpr
  $(DCC)

vmselect.CSY: winlaunch\CSY\vmselect.dpr
  $(DCC)


