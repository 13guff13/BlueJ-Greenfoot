#!/bin/sh

BINDIR=`dirname $0`
BLUEJ_HOME=$BINDIR/.. 
SUNTOOLS=/usr/java/lib/tools.jar

OPTIONS='-Dcom.apple.mrj.application.apple.menu.about.name=BlueJ -Dcom.apple.macos.useScreenMenuBar=false -native'

CP=$BLUEJ_HOME/lib/bluej.jar:$BLUEJ_HOME/classes:$BLUEJ_HOME/lib/antlr.jar:$BLUEJ_HOME/lib/MRJToolkitStubs.zip:$BLUEJ_HOME/lib/junit.jar:$SUNTOOLS

java -cp $CP $OPTIONS bluej.Main $@

