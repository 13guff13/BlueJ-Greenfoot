#!/bin/sh

BINDIR=`dirname $0`
BLUEJ_HOME=$BINDIR/.. 
SUNTOOLS=/usr/java/lib/tools.jar

THREADS_FLAG=native; export THREADS_FLAG

CLASSPATH=$BLUEJ_HOME/lib/bluej.jar:$BLUEJ_HOME/classes:$BLUEJ_HOME/lib/antlr.jar:$BLUEJ_HOME/lib/MRJToolkitStubs.zip:$BLUEJ_HOME/lib/junit.jar:$SUNTOOLS
export CLASSPATH

#java -Dcom.apple.mrj.application.apple.menu.about.name=BlueJ bluej.Main $@
java -Dcom.apple.mrj.application.apple.menu.about.name=BlueJ -Dcom.apple.macos.useScreenMenuBar=false bluej.Main $@
